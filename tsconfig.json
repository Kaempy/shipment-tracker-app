{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@context/*": ["src/context/*"],
      "@hooks/*": ["src/hooks/*"],
      "@svgs/*": ["src/svgs/*"],
      "@validations/*": ["src/validations/*"],
      "@lib/*": ["src/lib/*"],
      "@src/*": ["src/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "eslint.config.mjs",
    "metro.config.mjs",
    "nativewind-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
